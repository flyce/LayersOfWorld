<view class="container">
    <view class="sku-preview">
        <image class="sku-img" src="" />
        <view class="sku-description">
            <text class="title">测试SKU</text>
            <view>
                <view class="price-row">
                    <l-price value="{{777}}" color="#157658" value-szie="28" unit-size="20" autofix></l-price>
                    <l-price value="{{999}}" color="#999999" size="26" l-class="discount-price" deleted></l-price>
                </view>
                <view class="sku-pending">
                    <text>请选择:</text>
                </view>
            </view>
        </view>
    </view>

    <view class="hr" />

    <block wx:for="{{fences}}" wx:key="index">
        <v-fence bind:celltap="onCellTap" x="{{index}}" fence="{{item}}"/>
    </block>
    <view class="counter-container"></view>
</view>