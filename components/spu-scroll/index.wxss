.container {
    padding: 42rpx 0 34rpx 28rpx;
    width: 100%;
    box-sizing: border-box;
    background-color: #ffffff;
}
.title {
    width: 692rpx;
    height: 90rpx;
}

.price-unit {
    font-size: 32rpx !important;
}

.price-value {
    font-size: 32rpx !important;
}

.scroll-view {
    margin-top: 28rpx;
    display: flex;
    flex-direction: row;
}

.spu-container {
    margin-right: 60rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.inner{
    display: flex;
    flex-direction: row;
}

.spu-img {
    width: 160rpx;
    height: 160rpx;
}

.spu-text {
    font-size: 22rpx;
    font-weight: 20rpx;
    color: #666666;
    margin-top: 20rpx;
}